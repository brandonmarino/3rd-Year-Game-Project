<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="wrap_content" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".OthelloActivity"
    android:id="@+id/OthelloActivity">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="290dp"
        android:layout_height="290dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/linearLayout">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout2"
            android:layout_gravity="center_horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/b0x0"
                android:src="@drawable/empty_small"
                android:contentDescription="0"
                android:onClick="onClickSpace" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/b0x1"
                android:src="@drawable/empty_small"
                android:contentDescription="1"
                android:onClick="onClickSpace" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/b0x2"
                android:src="@drawable/empty_small"
                android:contentDescription="2"
                android:onClick="onClickSpace" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/b0x3"
                android:src="@drawable/empty_small"
                android:contentDescription="3"
                android:onClick="onClickSpace" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout3"
            android:layout_gravity="center_horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/b1x0"
                android:src="@drawable/empty_small"
                android:contentDescription="4"
                android:onClick="onClickSpace" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/b1x1"
                android:src="@drawable/empty_small"
                android:contentDescription="5"
                android:onClick="onClickSpace" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/b1x2"
                android:src="@drawable/empty_small"
                android:contentDescription="6"
                android:onClick="onClickSpace" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/b1x3"
                android:src="@drawable/empty_small"
                android:contentDescription="7"
                android:onClick="onClickSpace" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout4"
            android:layout_gravity="center_horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/b2x0"
                android:src="@drawable/empty_small"
                android:contentDescription="8"
                android:onClick="onClickSpace" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/b2x1"
                android:src="@drawable/empty_small"
                android:contentDescription="9"
                android:onClick="onClickSpace" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/b2x2"
                android:src="@drawable/empty_small"
                android:contentDescription="a"
                android:onClick="onClickSpace" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/b2x3"
                android:src="@drawable/empty_small"
                android:contentDescription="b"
                android:onClick="onClickSpace" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout5"
            android:layout_gravity="center_horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/b3x0"
                android:src="@drawable/empty_small"
                android:contentDescription="c"
                android:onClick="onClickSpace" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/b3x1"
                android:src="@drawable/empty_small"
                android:contentDescription="d"
                android:onClick="onClickSpace" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/b3x2"
                android:src="@drawable/empty_small"
                android:contentDescription="e"
                android:onClick="onClickSpace" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/b3x3"
                android:src="@drawable/empty_small"
                android:contentDescription="f"
                android:onClick="onClickSpace" />
        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/linearLayout"
        android:id="@+id/frameLayout">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Current Player: "
            android:id="@+id/current_player"
            android:layout_gravity="left|top" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Available Disks: "
            android:id="@+id/available_disks"
            android:layout_gravity="left|center_vertical" />

    </FrameLayout>

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/frameLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Play Again"
            android:id="@+id/but_replay"
            android:visibility="invisible"
            android:onClick="onClickReplay"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_gravity="center_horizontal|bottom" />
    </FrameLayout>

</RelativeLayout>
